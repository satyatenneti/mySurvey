	<script type="text/javascript">
		
			$(document).ready(function()) {
				$( "input[name="internal-id"]").click(function() {
					if($(this).is(':checked')) {
						$('#users-id').prop("disabled",false);
						$('#select-users').prop("disabled",false);

						$('#contacts-id').prop("disabled",true);;
						$('#select-contacts').prop("disabled",true);
						$('#contacts-id').prop("checked",false);

						$('#groups-id').prop("disabled",false);
						$('#select-groups').prop("disabled",false);
						$('#groups-id').prop("name","usersList");
					}
				});

				$( "input[name="external-id"]").click(function() {
					if($(this).is(':checked')) {
						$('#users-id').prop("disabled",true);
						$('#select-users').prop("disabled",true);
						$('#users-id').prop("checked",false);

						$('#contacts-id').prop("disabled",false);
						$('#select-contacts').prop("disabled",false);

						$('#groups-id').prop("disabled",false);
						$('#select-groups').prop("disabled",false);
						$('#groups-id').prop("name","contactsList");
					}
				});
			});

