<apex:page showHeader="true" sidebar="false" standardStylesheets="false" controller="SendSurveyController">
    <c:ScriptIncludes />
    <style>
        * { margin: 0; padding: 0;}
        .form-container {width: 60%; padding: 20px; margin: 20px auto; background-color: #fff; box-shadow: 0px 0px 8px #888888;}
        .section { padding: 15px; margin: 5px 0px; background-color: #fff; box-shadow: 0px 0px 8px #888888;}
        .table { width: 80%; margin: 0 auto; }
        input, label { font-weight: normal; font: normal 16px Arial; color: #575757;  }
        input.control-button { padding: 10px; border-radius: 5px; background-color: #4d90fe; color: #fff; font-weight: bold; min-width: 90px; cursor: pointer;}
        input.control-button:hover { background-color:#357ae8; }
        select { padding: 10px;  margin: 25px 5px 0px 5px; width: 100%  }
        .survey-title { font-size: 2em; font-weight: bold; margin: 10px; }
    </style>
    
    <apex:form id="sendSurvey">
        <div class="form-container">
            <div><apex:pageMessages /></div>
            <div class="survey-title">{!survey.Name}</div>
            <hr />
            <table class="table">
                <tr><th colspan="2" style="float: right;">
                    <select id="send-form-to-select">
                		  	<option value="">Send form to</option> 
                        	<option value="users">Internal Usres</option> 
                        	<option value="contacts">External Contacts</option> 
                        	<option value="groups">Groups</option> 
                    </select></th>
                </tr>
                <tr>
                    <td><div id="users" class="section">
                     	<apex:outputPanel rendered="{! usersList.size != 0}">
                        <label>Select Users</label>
                        <apex:selectList id="select-users" size="5" value="{!selectedUsers}" multiselect="true" styleClass="sender-list ui-selectmenu-button ui-widget ui-state-default ui-corner-top" style="overflow:auto">
                            <apex:selectOptions value="{!usersList}"/>
                        </apex:selectList>
                        </apex:outputPanel>
                        <apex:outputPanel rendered="{!usersList.size == 0}">No Users exist.</apex:outputPanel>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><div id="contacts" class="section">
                        <apex:outputPanel rendered="{! contactsList.size != 0}">
                         <label>Select Contacts</label>
                        <apex:selectList styleClass="sender-list ui-selectmenu-button ui-widget ui-state-default ui-corner-top" style="overflow:auto" id="select-contacts" size="5" value="{!selectedContacts}" multiselect="true">
                            <apex:selectOptions value="{!contactsList}"/>
                        </apex:selectList>
                        </apex:outputPanel>
                        <apex:outputPanel rendered="{!contactsList.size == 0}">No Contacts exist.</apex:outputPanel>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><div id="groups" class="section">
                        <apex:outputPanel rendered="{! groupsList.size != 0}">
                                <label>Select Groups</label>
                        		<apex:selectList styleClass="sender-list ui-selectmenu-button ui-widget ui-state-default ui-corner-top" style="overflow:auto" id="select-groups" size="5" value="{!selectedGroups}" multiselect="true">
                            		<apex:selectOptions value="{!groupsList}"/>
                        		</apex:selectList>
                        </apex:outputPanel>
                        <apex:outputPanel rendered="{!groupsList.size == 0}">No Groups exist.</apex:outputPanel>
                        </div>
                    </td>
                </tr>
                <tr><td>
                    	<apex:outputPanel >
                            <input type="button" disabled="disabled" class="control-button" value="Send Form" onclick="sendSurveyForm()" />
                        </apex:outputPanel>
                    </td>
                </tr>
            </table>
        </div>
        <apex:actionFunction action="{!sendForm}" name="sendSurveyForm"  />
    </apex:form>
    <script type="text/javascript">
    	$(document).ready(function(){
            $('div.section').hide();
            $('input.control-button').hide();
            $('select.sender-list').change(function(){
                if($(this).find('option:selected').length > 0 ) {
                    $('input.control-button').removeAttr('disabled');
                    $('input.control-button').show();
                } else {
                    $('input.control-button').prop('disabled', 'disabled');
                }
                
            });
        	$('#send-form-to-select').change(function(){
               	var sectionToDisplay = $('#send-form-to-select option:selected').val();
                $('div.section').hide();
                $('input.control-button').hide();
                $('select option:selected').each(function(){$(this).removeAttr('selected')});
                $('#'+sectionToDisplay).show();
            });
        });
    </script>
</apex:page>