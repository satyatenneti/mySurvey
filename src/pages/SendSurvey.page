	<apex:form>
		<div id="radio-buttons">
			<input id="internal-id" type="radio" name="radioButton" value="Internal" onchange="disableField()">Internal</input>
			<input id="external-id" type="radio" name="radioButton" value="External" onchange="disableField()">External</input>
		</div>
		<br/>
		<div id="users">
			<input id="users-id" type="radio" name="usersList" value="users">Users</input>
			<select id="select-users" name="usersList" size="1">
				<option value="user1"> User1</option>
				<option value="user2"> User2</option>
				<option value="user3"> User3</option>
			</select>
		</div>
		<br/>
		<div id="contacts">
			<input id="contacts-id" type="radio" name="contactsList" value="contacts">Contacts</input>
			<select id="select-contacts" name="contactsList" size="1">
				<option value="contact1"> Contact1</option>
				<option value="contact2"> Contact2</option>
				<option value="contact3"> Contact3</option>
			</select>
		</div>
		<br/>
		<div id="groups">
			<input id="groups-id" type="radio" name="groupsList" value="groups">Send to Group</input>
			<select id="select-groups" name="groupsList" size="1">
				<option value="group1"> Group1</option>
				<option value="group2"> Group2</option>
